# EldenOps Environment Configuration
# Copy this file to .env and fill in your values
# See docs/SETUP_GUIDE.md for detailed step-by-step instructions

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (async)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/eldenops

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DISCORD
# =============================================================================
# Bot token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_bot_token_here

# OAuth2 credentials (for web dashboard login)
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:8000/api/v1/auth/discord/callback

# =============================================================================
# SECURITY
# =============================================================================
# JWT signing key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption key for API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# AI PROVIDERS (Default - tenants can override with their own keys)
# =============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_OPENAI_MODEL=gpt-4o

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
DEFAULT_GEMINI_MODEL=gemini-pro

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEFAULT_DEEPSEEK_MODEL=deepseek-chat

# =============================================================================
# GITHUB
# =============================================================================
# GitHub App credentials (optional, for app-based auth)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# EMAIL (Phase 2)
# =============================================================================
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# EMAIL_FROM=noreply@eldenops.com

# =============================================================================
# RAILWAY (Production)
# =============================================================================
# These are automatically set by Railway
# PORT=
# RAILWAY_ENVIRONMENT=
